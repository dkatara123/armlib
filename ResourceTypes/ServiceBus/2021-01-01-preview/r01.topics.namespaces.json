{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "name": {
            "type": "string",
            "metadata": {
                "description": "Required. The topic name."
            }
        },
        "namespace": {
            "type": "string",
            "metadata": {
                "description": "Required. The namespace name."
            }
        },
        "msgTimeToLive": {
            "type": "string",
            "metadata": {
                "description": "Optional. ."
            },
            "defaultValue": "P10675199DT2H48M5.4775807S"
        },
        "maxSize": {
            "type": "int",
            "metadata": {
                "description": "Optional. ."
            },
            "defaultValue": 1024
        },
        "autoDeleteMsgTime": {
            "type": "string",
            "metadata": {
                "description": "Optional. ."
            },
            "defaultValue": "P10675199DT2H48M5.4775807S"
        },
        "dupDetectionHistoryTimeWindow": {
            "type": "string",
            "metadata": {
                "description": "Optional. ."
            },
            "defaultValue": "PT10M"
        },
        "enablePartitioning": {
            "type": "bool",
            "metadata": {
                "description": "Optional value that indicates whether the topic to be partitioned across multiple message brokers is enabled. Note - partitioning entities are not supported"
            },
            "defaultValue": true
        },
        "supportOrdering": {
            "type": "bool",
            "metadata": {
                "description": "Optional value that indicates whether the topic supports ordering."
            },
            "defaultValue": false
        },
        "requiresDuplicateDetection": {
            "type": "bool",
            "metadata": {
                "description": "Optional value indicating if this topic requires duplicate detection."
            },
            "defaultValue": false
        }
    },
    "functions": [
    ],
    "variables": {
    },
    "resources": [
        {
            "name": "[concat(parameters('namespace'),'/',parameters('name'))]",
            "type": "Microsoft.ServiceBus/namespaces/topics",
            "apiVersion": "2018-01-01-preview",
            "properties": {
                "defaultMessageTimeToLive": "[parameters('msgTimeToLive')]",
                "maxSizeInMegabytes": "[parameters('maxSize')]",
                "duplicateDetectionHistoryTimeWindow": "[parameters('dupDetectionHistoryTimeWindow')]",
                "enableBatchedOperations": true,
                "status": "Active",
                "autoDeleteOnIdle": "[parameters('autoDeleteMsgTime')]",
                "enableExpress": false,
                "enablePartitioning": "[parameters('enablePartitioning')]",
                "supportOrdering": "[parameters('supportOrdering')]",
                "requiresDuplicateDetection": "[parameters('requiresDuplicateDetection')]"
            },
            "resources": [
            ]
        }
    ],
    "outputs": {
    }
}
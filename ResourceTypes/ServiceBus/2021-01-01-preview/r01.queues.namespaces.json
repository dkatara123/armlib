{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "name": {
            "type": "string",
            "metadata": {
                "description": "Required. The queue name."
            }
        },
        "namespace": {
            "type": "string",
            "metadata": {
                "description": "Required. The namespace name."
            }
        },
        "msglockDuration": {
            "type": "string",
            "metadata": {
                "description": "Optional. Msg lock time."
            },
            "defaultValue": "PT1M" 
        },
        "msgTimeToLive": {
            "type": "string",
            "metadata": {
                "description": "Optional. ."
            },
            "defaultValue": "P10675199DT2H48M5.4775807S"
        },
        "maxSize": {
            "type": "int",
            "metadata": {
                "description": "Optional. ."
            },
            "defaultValue": 1024
        },
        "autoDeleteMsgTime": {
            "type": "string",
            "metadata": {
                "description": "Optional. ."
            },
            "defaultValue": "P10675199DT2H48M5.4775807S"
        },
        "enablePartitioning": {
            "type": "bool",
            "metadata": {
                "description": "Optional.Value that indicates whether the topic to be partitioned across multiple message brokers is enabled. Note - partitioning entities are not supported"
            },
            "defaultValue": true
        }
    },
    "functions": [
    ],
    "variables": {
    },
    "resources": [
        {
            "name": "[concat(parameters('namespace'),'/',parameters('name'))]",
            "type": "Microsoft.ServiceBus/namespaces/queues",
            "apiVersion": "2018-01-01-preview",
            "properties": {
                "lockDuration": "[parameters('msglockDuration')]",
                "maxSizeInMegabytes": "[parameters('maxSize')]",
                "requiresDuplicateDetection": false,
                "requiresSession": true,
                "defaultMessageTimeToLive": "[parameters('msgTimeToLive')]",
                "deadLetteringOnMessageExpiration": false,
                "enableBatchedOperations": true,
                "duplicateDetectionHistoryTimeWindow": "PT10M",
                "maxDeliveryCount": 10,
                "status": "Active",
                "autoDeleteOnIdle": "[parameters('autoDeleteMsgTime')]",
                "enablePartitioning": "[parameters('enablePartitioning')]",
                "enableExpress": false

            },
            "resources": [
            ]
        }
    ],
    "outputs": {
    }
}
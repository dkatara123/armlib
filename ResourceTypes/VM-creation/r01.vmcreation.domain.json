{
    "$schema": "http://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "VMname": {
            "type": "String"
        },
        "location": {
            "type": "String"
        },
        "vmSize": {
            "type": "string"
        },
        "DataFactoryVersion": {
            "type": "string"
        },
        "datafactoryId": {
            "type": "string"
        },
        "scriptUrl": {
            "type": "string"
        },
        "adminusername": {
            "type": "String"
        },
        "adminpassword": {
            "type": "SecureString"
        },
        "vnetName": {
            "type": "String"
        },
        "subnetName": {
            "type": "String"
        },
        "vnet_resourceGroup": {
            "type": "string"
        },
        "imagegalleryname": {
            "type": "string",
            "metadata": {
                "description": "Name of the Shared Image Gallery."
            }
        },
        "galleryImageDefinitionName": {
            "type": "string",
            "metadata": {
                "description": "Name of the Image Definition."
            }
        },
        "galleryImageVersionName": {
            "type": "string",
            "metadata": {
                "description": "Name of the Image Version - should follow <MajorVersion>.<MinorVersion>.<Patch>."
            }
        },
        "DomainName": {
            "type": "string",
            "metadata": {
                "description": "The FQDN of the AD domain"
            }
        },
        "domainUsername": {
            "type": "string",
            "metadata": {
                "description": "Username of the account on the domain"
            }
        },
        "domainPassword": {
            "type": "securestring",
            "metadata": {
                "description": "Password of the account on the domain"
            }
        },
        "ouPath": {
            "type": "string",
            "defaultValue": "",
            "metadata": {
                "description": "Specifies an organizational unit (OU) for the domain account. Enter the full distinguished name of the OU in quotation marks. Example: \"OU=testOU; DC=domain; DC=Domain; DC=com\""
            }
        }
    },
    "variables": {
        "subscriptionId": "[subscription().subscriptionid]",
        "vnetID": "[resourceId(variables('subscriptionid'),parameters('vnet_resourceGroup'),'Microsoft.Network/virtualNetworks/', parameters('vnetName'))]",
        "subnetRef": "[concat(variables('vnetID'), '/subnets/', parameters('subnetName'))]"
    },
    "resources": [
        {
            "type": "Microsoft.Compute/virtualMachines",
            "apiVersion": "2019-07-01",
            "name": "[parameters('VMname')]",
            "location": "[parameters('location')]",
            "dependsOn": [
                "[resourceId('Microsoft.Network/networkInterfaces/', concat([parameters('VMname')],'_nic'))]"
            ],
            "properties": {
                "hardwareProfile": {
                    "vmSize": "[parameters('vmSize')]"
                },
                "storageProfile": {
                    "osDisk": {
                        "createOption": "fromImage",
                        "managedDisk": {
                            "storageAccountType": "StandardSSD_LRS"
                        }
                    },
                    "imageReference": {
                        "id": "[resourceId('Microsoft.Compute/galleries/images/versions', parameters('imagegalleryname'), parameters('galleryImageDefinitionName'), parameters('galleryImageVersionName'))]"
                    }
                },
                "osProfile": {
                    "computerName": "[parameters('VMname')]",
                    "adminUsername": "[parameters('adminusername')]",
                    "adminPassword": "[parameters('adminpassword')]",
                    "allowExtensionOperations": true,
                    "requireGuestProvisionSignal": true
                },
                "networkProfile": {
                    "networkInterfaces": [
                        {
                            "id": "[resourceId('Microsoft.Network/networkInterfaces',concat([parameters('VMname')],'_nic'))]"
                        }
                    ]
                },
                "licenseType": "Windows_Server",
                "diagnosticsProfile": {
                    "bootDiagnostics": {
                        "enabled": true
                    }
                }
            }
        },
        {
            "type": "Microsoft.Network/networkInterfaces",
            "apiVersion": "2020-05-01",
            "name": "[concat([parameters('VMname')],'_nic')]",
            "location": "[parameters('location')]",
            "properties": {
                "ipConfigurations": [
                    {
                        "name": "ipconfig1",
                        "properties": {
                            "privateIPAllocationMethod": "dynamic",
                            "subnet": {
                                "id": "[variables('subnetRef')]"
                            },
                            "primary": true,
                            "privateIPAddressVersion": "IPv4"
                        }
                    }
                ],
                "dnsSettings": {
                    "dnsServers": []
                },
                "enableAcceleratedNetworking": false,
                "enableIPForwarding": false
            }
        },
        {
            "apiVersion": "2015-06-15",
            "type": "Microsoft.Compute/virtualMachines/extensions",
            "name": "[concat(parameters('VMname'),'/joindomain')]",
            "location": "[parameters('location')]",
            "dependsOn": [
                "[concat('Microsoft.Compute/virtualMachines/', parameters('VMname'))]"
            ],
            "properties": {
                "publisher": "Microsoft.Compute",
                "type": "JsonADDomainExtension",
                "typeHandlerVersion": "1.3",
                "autoUpgradeMinorVersion": true,
                "settings": {
                    "Name": "[parameters('DomainName')]",
                    "OUPath": "[parameters('ouPath')]",
                    "User": "[concat(parameters('DomainName'), '\\', parameters('domainUsername'))]",
                    "Restart": "true",
                    "Options": 3
                },
                "protectedSettings": {
                    "Password": "[parameters('domainPassword')]"
                }
            }
        },
        {
            "type": "Microsoft.Compute/virtualMachines/extensions",
            "name": "[concat(parameters('VMname'), '/' ,parameters('VMname'), 'installGW')]",
            "apiVersion": "2019-07-01",
            "location": "[parameters('location')]",
            "tags": {
                "vmname": "[parameters('VMname')]"
            },
            "dependsOn": [
                "[concat('Microsoft.Compute/virtualMachines/', parameters('VMname'))]"
            ],
            "properties": {
                "publisher": "Microsoft.Compute",
                "type": "CustomScriptExtension",
                "typeHandlerVersion": "1.7",
                "autoUpgradeMinorVersion": true,
                "settings": {
                    "fileUris": [
                        "[parameters('scriptURL')]"
                    ]
                },
                "protectedSettings": {
                    "commandToExecute": "[concat('powershell.exe -ExecutionPolicy Unrestricted -File Install-integrationruntime.ps1 ', if(equals(parameters('DataFactoryVersion'), 'V2'), listAuthKeys(parameters('datafactoryId'), '2017-09-01-preview').authKey1, listAuthKeys(parameters('datafactoryId'), '2015-10-01').key1))]"
                }
            }
        }
    ]
}
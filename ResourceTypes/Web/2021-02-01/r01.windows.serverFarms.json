{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "serverFarmName": {
            "type": "string",
            "metadata": {
                "description": "server farm name"
            }
        },
        "skuName": {
            "type": "string",
            "metadata": {
                "description": "sku name"
            }
        },
        "tier": {
            "type": "string",
            "metadata": {
                "description": "server farm tier"
            }
        },
        "size": {
            "type": "string",
            "metadata": {
                "description": "server farm size"
            }
        },
        "family": {
            "type": "string",
            "metadata": {
                "description": "server farm family"
            }
        },
        "capacity": {
            "type": "int",
            "metadata": {
                "description": "server farm capacity"
            }
        },
        "location": {
            "type": "string",
            "metadata": {
                "description": "Optional. Resource location. If not provided, by default it will take resource group location."
            },
            "defaultValue": "[resourceGroup().location]"
        }
    },
    "resources": [
        {
            "type": "Microsoft.Web/serverfarms",
            "apiVersion": "2021-02-01",
            "name": "[parameters('serverFarmName')]",
            "location": "[parameters('location')]",
            "sku": {
                "name": "[parameters('skuName')]",
                "tier": "[parameters('tier')]",
                "size": "[parameters('size')]",
                "family": "[parameters('family')]",
                "capacity": "[parameters('capacity')]"
            },
            "kind": "elastic",
            "properties": {
                "mode": "Incremental",
                "perSiteScaling": false,
                "elasticScaleEnabled": true,
                "maximumElasticWorkerCount": 20,
                "zoneRedundant": false
            }
        }
    ],
    "outputs": {}
}
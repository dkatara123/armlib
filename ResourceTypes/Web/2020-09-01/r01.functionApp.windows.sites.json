{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "name": {
            "type": "string"
        },
        "location": {
            "type": "string",
            "defaultValue": "[resourceGroup().location]"
        },
        "hostingPlanName": {
            "type": "string"
        },
        "serverFarmResourceGroup": {
            "type": "string"
        },
        "storageAccountResourceGroup": {
            "type": "string",
            "metadata": {
                "description": "description"
            }
        },
        "storageAccountName": {
            "type": "string"
        },
        "windowsFxVersion": {
            "type": "string"
        },
        "functions_worker_runtime": {
            "type": "string",
            "metadata": {
                "description": "description"
            },
            "allowedValues": [
                "dotnet",
                "node",
                "java",
                "powershell",
                "python"
            ],
            "defaultValue": "powershell"
        },
        "runtimeVersion": {
            "type": "string",
            "metadata": {
                "description": "description"
            },
            "allowedValues": [
                "~1",
                "~2",
                "~3"
            ],
            "defaultValue": "~3"
        },
        "ipSecurityRestrictions": {
            "type": "array"
        },
        "sendDiagnosticsToWorkspace": {
            "type": "bool",
            "metadata": {
                "description": "description"
            },
            "defaultValue": false
        },
        "workspaceId": {
            "type": "string",
            "metadata": {
                "description": "description"
            },
            "defaultValue": null
        },
        "applicationInsightsName": {
            "type": "string",
            "metadata": {
                "description": "description"
            }
        },
        "applicationInsightsResourceGroup": {
            "type": "string",
            "metadata": {
                "description": "description"
            }
        },
        "functionsRuntimeScaleMonitoringEnabled": {
            "type": "bool",
            "metadata": {
                "description": "description"
            }
        }
    },
    "resources": [
        {
            "apiVersion": "2019-08-01",
            "name": "[parameters('name')]",
            "type": "Microsoft.Web/sites",
            "kind": "functionapp",
            "identity": {	
                "principalId": "",	
                "tenantId": "",	
                "type": "SystemAssigned"	
            },
            "location": "[parameters('location')]",
            "tags": {
            },
            "dependsOn": [
            ],
            "properties": {
                "name": "[parameters('name')]",
                "enabled": true,
                "hostNameSslStates": [
                    {
                        "name": "parameters('name').azurewebsites.net",
                        "sslState": "Disabled",
                        "hostType": "Standard"
                    },
                    {
                        "name": "parameters('name').scm.azurewebsites.net",
                        "sslState": "Disabled",
                        "hostType": "Repository"
                    }
                ],
                "siteConfig": {
                },
                "serverFarmId": "[resourceId(parameters('serverFarmResourceGroup'),'Microsoft.Web/serverfarms',parameters('hostingPlanName'))]",
                "reserved": false,
                "isXenon": false,
                "hyperV": false,
                "clientAffinityEnabled": true,
                "scmSiteAlsoStopped": false,
                "httpsOnly": false,
                "clientCertEnabled": false,
                "hostNamesDisabled": false,
                "containerSize": 1536,
                "dailyMemoryTimeQuota": 0,
                "redundancyMode": "None"
            },
            "resources": [
                {
                    "condition": "[parameters('sendDiagnosticsToWorkspace')]",
                    "type": "Microsoft.Web/sites/providers/diagnosticSettings",
                    "name": "[concat(parameters('name'),'/Microsoft.Insights/SendToLogAnalytics')]",
                    "dependsOn": [
                        "[parameters('name')]"
                    ],
                    "apiVersion": "2017-05-01-preview",
                    "properties": {
                        "name": "SendToLogAnalytics",
                        "workspaceId": "[parameters('workspaceId')]",
                        "logs": [
                            {
                                "category": "FunctionAppLogs",
                                "enabled": true
                            }
                        ],
                        "metrics": [
                            {
                                "category": "AllMetrics",
                                "enabled": true
                            }
                        ]
                    }
                }
            ]

        }
    ]
}

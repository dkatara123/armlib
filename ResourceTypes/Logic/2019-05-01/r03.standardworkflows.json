{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "name": {
            "type": "string"
        },
        "location": {
            "type": "string",
            "defaultValue": "[resourceGroup().location]"
        },
        "hostingPlanName": {
            "type": "string"
        },
        "serverFarmResourceGroup": {
            "type": "string"
        },
        "storageAccountResourceGroup": {
            "type": "string",
            "metadata": {
                "description": "description"
            }
        },
        "storageAccountName": {
            "type": "string"
        },
        "blobStorageAccountResourceGroup": {
            "type": "string",
            "metadata": {
                "description": "description"
            }
        },
        "blobStorageAccountName": {
            "type": "string"
        },
        "functions_worker_runtime": {
            "type": "string",
            "metadata": {
                "description": "description"
            },
            "allowedValues": [
                "dotnet",
                "node",
                "java",
                "powershell",
                "python"
            ]
        },
        "runtimeVersion": {
            "type": "string",
            "metadata": {
                "description": "description"
            },
            "allowedValues": [
                "~1",
                "~2",
                "~3"
            ]
        },
        "sendDiagnosticsToWorkspace": {
            "type": "bool",
            "metadata": {
                "description": "description"
            },
            "defaultValue": false
        },
        "workspaceId": {
            "type": "string",
            "metadata": {
                "description": "description"
            },
            "defaultValue": null
        },
        "applicationInsightsName": {
            "type": "string",
            "metadata": {
                "description": "description"
            }
        },
        "applicationInsightsResourceGroup": {
            "type": "string",
            "metadata": {
                "description": "description"
            }
        },
        "functionsRuntimeScaleMonitoringEnabled": {
            "type": "bool",
            "metadata": {
                "description": "description"
            }
        }
    },
    "resources": [
        {
            "type": "Microsoft.Web/serverfarms",
            "apiVersion": "2018-02-01",
            "name": "[parameters('hostingPlanName')]",
            "location": "East US",
            "tags": {
                "Environment": "Development",
                "LOB": "Spectrum",
                "Node": "Hub",
                "Platform": "Azure Commercial Cloud",
                "Solution": "Spectrum Cloud Integration Platform (SCIP)"
            },
            "sku": {
                "name": "WS1",
                "tier": "WorkflowStandard",
                "size": "WS1",
                "family": "WS",
                "capacity": 1
            },
            "kind": "elastic",
            "properties": {
                "perSiteScaling": false,
                "maximumElasticWorkerCount": 20,
                "isSpot": false,
                "reserved": false,
                "isXenon": false,
                "hyperV": false,
                "targetWorkerCount": 0,
                "targetWorkerSizeId": 0
            }
        },
        {
            "apiVersion": "2018-11-01",
            "name": "[parameters('name')]",
            "type": "Microsoft.Web/sites",
            "kind": "functionapp,workflowapp",
            "location": "[parameters('location')]",
            "tags": {
            },
            "dependsOn": [
                "[resourceId('Microsoft.Web/serverfarms', parameters('hostingPlanName'))]"
            ],
            "identity": {	
                "principalId": "",	
                "tenantId": "",	
                "type": "SystemAssigned"	
            },
            "properties": {
                "name": "[parameters('name')]",
                "hostNameSslStates": [
                    {
                      "name": "[concat(parameters('name'),'.azurewebsites.net')]",
                      "sslState": "Disabled",
                      "hostType": "Standard"
                    },
                    {
                      "name": "[concat(parameters('name'),'.scm.azurewebsites.net')]",
                      "sslState": "Disabled",
                      "hostType": "Repository"
                    }
                ],          
                "siteConfig": {
                    "functionsRuntimeScaleMonitoringEnabled": "[parameters('functionsRuntimeScaleMonitoringEnabled')]",
                    "appSettings": [
                        {
                            "name": "APP_KIND",
                            "value": "workflowApp"
                        },
                        {
                            "name": "AzureFunctionsJobHost__extensionBundle__id",
                            "value": "Microsoft.Azure.Functions.ExtensionBundle.Workflows"
                        },
                        {
                            "name": "AzureFunctionsJobHost__extensionBundle__version",
                            "value": "[1.*, 2.0.0)"
                        },
                        {
                            "name": "AzureWebJobsStorage",
                            "value": "[concat('DefaultEndpointsProtocol=https;AccountName=',parameters('storageAccountName'),';AccountKey=',listKeys(resourceId(parameters('storageAccountResourceGroup'),'Microsoft.Storage/storageAccounts', parameters('storageAccountName')), '2019-06-01').keys[0].value,';EndpointSuffix=','core.windows.net')]"
                        },
                        {
                            "name": "apc-use-scip-sto-blob_connectionString",
                            "value": "[concat('DefaultEndpointsProtocol=https;AccountName=',parameters('blobStorageAccountName'),';AccountKey=',listKeys(resourceId(parameters('blobStorageAccountResourceGroup'),'Microsoft.Storage/storageAccounts', parameters('blobStorageAccountName')), '2019-06-01').keys[0].value,';EndpointSuffix=','core.windows.net')]"
                        },
                        {
                            "name": "FUNCTIONS_EXTENSION_VERSION",
                            "value": "[parameters('runtimeVersion')]"
                        },
                        {
                            "name": "FUNCTIONS_V2_COMPATIBILITY_MODE",
                            "value": "true"
                        },
                        {
                            "name": "FUNCTIONS_WORKER_RUNTIME",
                            "value": "[parameters('functions_worker_runtime')]"
                        },
                        {
                            "name": "WEBSITE_CONTENTAZUREFILECONNECTIONSTRING",
                            "value": "[concat('DefaultEndpointsProtocol=https;AccountName=',parameters('storageAccountName'),';AccountKey=',listKeys(resourceId(parameters('storageAccountResourceGroup'),'Microsoft.Storage/storageAccounts', parameters('storageAccountName')), '2019-06-01').keys[0].value,';EndpointSuffix=','core.windows.net')]"
                        },
                        {
                            "name": "WEBSITE_CONTENTSHARE",
                            "value": "[concat(toLower(parameters('name')),take(uniqueString(parameters('name')),5))]"
                        },
                        {
                            "name": "APPINSIGHTS_INSTRUMENTATIONKEY",
                            "value": "[reference(resourceId(parameters('applicationInsightsResourceGroup'),'Microsoft.Insights/components',parameters('applicationInsightsName')), '2018-05-01-preview').InstrumentationKey]"
                        },
                        {
                            "name": "APPLICATIONINSIGHTS_CONNECTION_STRING",
                            "value": "[concat('InstrumentationKey=',reference(resourceId(parameters('applicationInsightsResourceGroup'),'Microsoft.Insights/components',parameters('applicationInsightsName')), '2018-05-01-preview').InstrumentationKey,';IngestionEndpoint=https://eastus-1.in.applicationinsights.azure.com/')]"
                        },
                        {
                            "name": "WEBSITE_NODE_DEFAULT_VERSION",
                            "value": "~14"
                        },      
                        {   "name": "WEBSITE_VNET_ROUTE_ALL",
                            "value": "1"
                        },
                        {   "name": "WEBSITE_DNS_SERVER",
                            "value": "168.63.129.16"
                        }
                    ],
                    "httpLoggingEnabled": true,
                    "logsDirectorySizeLimit": 100,
                    "http20Enabled": true,
                    "minTlsVersion": "1.2",
                    "scmIpSecurityRestrictionsUseMain": true,
                    "ftpsState": "Disabled"
                },
                "serverFarmId": "[resourceId('Microsoft.Web/serverfarms', parameters('hostingPlanName'))]",
                "reserved": false,
                "isXenon": false,
                "hyperV": false,  
                "scmSiteAlsoStopped": false,
                "http20Enabled": true,
                "clientAffinityEnabled": false,
                "httpsOnly": true
            },
            "resources": [
                {
                    "condition": "[parameters('sendDiagnosticsToWorkspace')]",
                    "type": "Microsoft.Web/sites/providers/diagnosticSettings",
                    "name": "[concat(parameters('name'),'/Microsoft.Insights/SendToLogAnalytics')]",
                    "dependsOn": [
                        "[parameters('name')]"
                    ],
                    "apiVersion": "2017-05-01-preview",
                    "properties": {
                        "name": "SendToLogAnalytics",
                        "workspaceId": "[parameters('workspaceId')]",
                        "logs": [
                            {
                                "category": "FunctionAppLogs",
                                "enabled": true
                            }
                        ],
                        "metrics": [
                            {
                                "category": "AllMetrics",
                                "enabled": true
                            }
                        ]
                    }
                }
            ]
        },
        {
            "type": "Microsoft.Web/sites/config",
            "apiVersion": "2018-11-01",
            "name": "[concat(parameters('name'), '/web')]",
            "location": "East US",
            "dependsOn": [
                "[resourceId('Microsoft.Web/sites', parameters('name'))]"
            ],
            "tags": {
                "Environment": "Development",
                "LOB": "Spectrum",
                "Node": "Hub",
                "Platform": "Azure Commercial Cloud",
                "Solution": "Spectrum Cloud Integration Platform (SCIP)"
            },
            "properties": {
                "numberOfWorkers": 1,
                "defaultDocuments": [
                    "Default.htm",
                    "Default.html",
                    "Default.asp",
                    "index.htm",
                    "index.html",
                    "iisstart.htm",
                    "default.aspx",
                    "index.php"
                ],
                "netFrameworkVersion": "v4.0",
                "phpVersion": "5.6",
                "requestTracingEnabled": false,
                "remoteDebuggingEnabled": false,
                "remoteDebuggingVersion": "VS2019",
                "httpLoggingEnabled": false,
                "logsDirectorySizeLimit": 35,
                "detailedErrorLoggingEnabled": false,
                "publishingUsername": "$lap-use-scip01-dv1test",
                "azureStorageAccounts": {},
                "scmType": "VSTSRM",
                "use32BitWorkerProcess": true,
                "webSocketsEnabled": false,
                "alwaysOn": false,
                "managedPipelineMode": "Integrated",
                "virtualApplications": [
                    {
                        "virtualPath": "/",
                        "physicalPath": "site\\wwwroot",
                        "preloadEnabled": false
                    }
                ],
                "loadBalancing": "LeastRequests",
                "experiments": {
                    "rampUpRules": []
                },
                "autoHealEnabled": false,
                "vnetName": "CO-NP-eastus-IDD-vnet",
                "localMySqlEnabled": false,
                "managedServiceIdentityId": 5384,
                "cors": {
                    "allowedOrigins": [
                        "https://afd.hosting.portal.azure.net",
                        "https://afd.hosting-ms.portal.azure.net",
                        "https://hosting.portal.azure.net",
                        "https://ms.hosting.portal.azure.net",
                        "https://ema-ms.hosting.portal.azure.net",
                        "https://ema.hosting.portal.azure.net"
                    ],
                    "supportCredentials": false
                },
                "ipSecurityRestrictions": [
                    {
                        "ipAddress": "Any",
                        "action": "Allow",
                        "priority": 1,
                        "name": "Allow all",
                        "description": "Allow all access"
                    }
                ],
                "scmIpSecurityRestrictions": [
                    {
                        "ipAddress": "Any",
                        "action": "Allow",
                        "priority": 1,
                        "name": "Allow all",
                        "description": "Allow all access"
                    }
                ],
                "scmIpSecurityRestrictionsUseMain": false,
                "http20Enabled": true,
                "minTlsVersion": "1.2",
                "ftpsState": "AllAllowed",
                "reservedInstanceCount": 1
            }
        }
    ]
}

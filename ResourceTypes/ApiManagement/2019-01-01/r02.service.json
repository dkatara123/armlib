{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "name": {
            "type": "string",
            "metadata": {
                "description": "Name of the APIM instance"
            }
        },
        "location": {
            "metadata": {
                "descrption": "Location of the resource"
            },
            "type": "string",
            "defaultValue": "[resourceGroup().location]"
        },
        "sku_Name": {
            "type": "String"
        },
        "sku_Capacity": {
            "type": "Int"
        },
        "publisherEmail": {
            "metadata": {
                "descrption": "Email address for API publisher"
            },            
            "type": "String"
        },
        "publisherName": {
            "metadata": {
                "descrption": "Name of the API publisher"
            },            
            "type": "String"
        },
        "virtualNetworkType": {
            "metadata": {
                "descrption": "VNET Type"
            },            
            "type": "String",
            "defaultValue": "internal"
        },
        
        "vnetResourceGroupName": {
            "type": "string"
        },
        "vnetName": {
            "type": "string"
        },
        "subnetName": {
            "type": "string"
        },
        "sslCertData": {
            "type": "SecureString",
            "metadata": {
                "descrption": "SSL certificate from KeyVault"
            }        
        },
        "sendDiagnosticsToWorkspace": {
            "type": "bool",
            "metadata": {
                "description": "description"
            },
            "defaultValue": false
        },
        "workspaceId": {
            "type": "string",
            "metadata": {
                "description": "description"
            },
            "defaultValue": null
        }
    },
    "variables": {
        "vnetId": "[resourceId(parameters('vnetResourceGroupName'), 'Microsoft.Network/virtualNetworks', parameters('vnetName'))]",
        "subnetRef": "[concat(variables('vnetId'), '/subnets/', parameters('subnetName'))]"
    },
    "resources": [
        {
            "apiVersion": "2019-01-01",
            "name": "[parameters('name')]",
            "type": "Microsoft.ApiManagement/service",
            "location": "[parameters('location')]",
            "sku": {
                "name": "[parameters('sku_Name')]",
                "capacity": "[parameters('sku_Capacity')]"
            },
            "properties": {
                "publisherEmail": "[parameters('publisherEmail')]",
                "publisherName": "[parameters('publisherName')]",
                "virtualNetworkType": "[parameters('virtualNetworkType')]",
                "virtualNetworkConfiguration": {
                    "subnetResourceId": "[variables('subnetRef')]",
                    "location": "[parameters('location')]"
                },
                "customProperties": {
                    "subnetAddress": "[reference(resourceId(parameters('vnetResourceGroupName'), 'Microsoft.Network/virtualNetworks/subnets', parameters('vnetName'), parameters('subnetName')), '2018-03-01').addressPrefix]"
                }
                /*"hostnameConfigurations": [
                    {
                        "type": "Proxy",
                        "hostName": "[parameters('frontendFQDN')]",
                        "encodedCertificate": "[parameters('sslCertData')]",
                        "defaultSslBinding": true,
                        "negotiateClientCertificate": false
                    }
                ]*/
            },
            "identity": {
                "type": "systemAssigned"
            },
            "resources": [
                {
                    "condition": "[parameters('sendDiagnosticsToWorkspace')]",
                    "type": "providers/diagnosticSettings",
                    "name": "Microsoft.Insights/SendToLogAnalytics",
                    "dependsOn": [
                        "[parameters('name')]"
                    ],
                    "apiVersion": "2017-05-01-preview",
                    "properties": {
                        "name": "SendToLogAnalytics",
                        "workspaceId": "[parameters('workspaceId')]",
                        "logs": [
                            {
                                "category": "GatewayLogs",
                                "enabled": true
                            }
                        ],
                        "metrics": [
                            {
                                "category": "AllMetrics",
                                "enabled": true
                            }
                        ]
                    }
                }
            ]
        }
    ]

    
}
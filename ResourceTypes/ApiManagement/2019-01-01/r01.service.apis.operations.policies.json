{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "name": {
            "type": "string"
        },
        "policies": {
            "type": "array",
            "metadata": {
                "description": "A collection of APIM service-level API policies"
            },
            "defaultValue": []
        }
    },
    "variables": {},
    "resources": [
        {
            "type": "Microsoft.ApiManagement/service/apis/operations/policies",
            "apiVersion": "2019-01-01",
            "name": "[concat(parameters('name'), '/', parameters('policies')[copyIndex('operation_policies_copy')].apiName, '/', parameters('policies')[copyIndex('operation_policies_copy')].operationName, '/', parameters('policies')[copyIndex('operation_policies_copy')].policyName)]",
            "dependsOn": [],
            "properties": {
                "value": "[parameters('policies')[copyIndex('operation_policies_copy')].policyValue]",
                "format": "[parameters('policies')[copyIndex('operation_policies_copy')].policyValueFormat]"
            },
            "copy": {
                "name": "operation_policies_copy",
                "count": "[length(parameters('policies'))]"
            }
        }
    ]
}